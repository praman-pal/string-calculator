<h1>String Calculator</h1>

<%= form_with url: "/add", method: :post, local: true do |form| %>
  <div>
    <%= form.label :numbers, "Enter numbers:" %>
    <%= form.text_field :numbers %>
  </div>
  
  <div>
    <%= form.submit "Calculate" %>
  </div>
<% end %>

<% if @result.present? %>
  <h2>Result: <%= @result %></h2>
<% end %>
